        .absolute.top-0.left-0.w-full.h-full.overflow-hidden
          .absolute.top-1/2.left-1/2.w-48.h-1.bg-yellow-300.border-2.border-black.transform.-translate-y-1/2.-translate-x-1/2.-rotate-12
        / Lightning bolt decoration
        .absolute.top-6.left-6.w-8.h-12.bg-yellow-400.border-4.border-black.transform.rotate-45

        .text-center.relative.z-10
          .w-20.h-20.bg-blue-100.border-4.border-black.mx-auto.mb-6.flex.items-center.justify-center.relative
            = inline_svg "cloud.svg", class: "w-10 h-10"
