        .absolute.top-0.left-0.w-full.h-full.overflow-hidden
          .absolute.top-1/2.left-1/2.w-48.h-1.bg-green-300.border-2.border-black.transform.-translate-y-1/2.-translate-x-1/2.rotate-12

        .text-center.relative.z-10
          .w-20.h-20.bg-gray-100.border-4.border-black.mx-auto.mb-6.flex.items-center.justify-center.relative
            svg.w-10.h-10.text-black fill="none" stroke="currentColor" viewBox="0 0 24 24"
              path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"
